{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch nautilus",
      "type": "cppdbg",
      "request": "launch",

      "preLaunchTask": "nautilus-pre-launch",
      "program": "/usr/bin/nautilus",
      "args": ["~"],
      "cwd": "${workspaceFolder}",
      "environment": [],

      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",

      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}